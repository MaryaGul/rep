#include <iostream> //5
#include <iomanip>
using namespace std;
const int SIZE = 5;
void addarrays(float *arr1, float *arr2, float *arr3, int size)
{
for (int i = 0; i < size; i++)
*(arr3 + i) = *(arr1 + i) + *(arr2 + i);

}
int main() 
{
    cout<<"Task 5"<<endl;
    float arr1[SIZE], arr2[SIZE], arr3[SIZE];
    for (int i = 0; i < SIZE; i++)

    {
    *(arr1 + i) = i * i - i * 2.4;
    cout << setw(8) << *(arr1 + i) << " ";
    }
    cout << endl;
    for (int i = 0; i < SIZE; i++)
    {
    *(arr2 + i) = i * 5 / 2.3;
    cout << setw(8) << *(arr2 + i) << " ";
    }
    cout << endl;
    addarrays(arr1, arr2, arr3, SIZE);
    for (int i = 0; i < SIZE; i++)
    cout << setw(8) << *(arr3 + i) << " ";
    return 0;
    }
