#include <iostream>
using namespace std;
int main()
{
    float gall, fut;
    cout<<"Введите объем в галлонах:"<<endl;
    cin>>gall;
    if( gall < 0){
        cout<<"Объем не может быть меньше 0!"<<endl;
    } else {
        fut = gall/7.481;
        cout<<"Этот объем в футах равен "<<fut<<endl;
    }
    return 0;
}

#include <iostream>
#include <iomanip> //подключаем библиотеку для особого вывода на экран
using namespace std;
int main()
{
     cout<<1990<<setw(10)<<135<<endl<<1991<<setw(10)<<7290<<endl<<1992<<setw(10)<<11300<<endl<<1993<<setw(10)<<16200<<endl;
     return 0;
}

#include <iostream>
using namespace std;
int main()
{
    int num = 10;
    const int num1 =10;
    cout<<num1<<endl;
    num*=2;
    cout<<num<<endl;
    cout<<--num<<endl;
    
     return 0;
}


#include <iostream>
using namespace std;
int main()
{
    cout<<"Выхожу один я на дорогу;"<<endl<<"Сквозь туман кремнистый путь блестит;"<<endl
    <<"Ночь тиха. Пустыня внемлет богу,"<<endl<<"И звезда с звездою говорит."<<endl<<"\n\n"<<
    "В небесах торжественно и чудно!"<<endl<<"Спит земля в сияньи голубом..."<<endl<<"Что же мне так больно и так трудно?"
    <<endl<<"Жду ль чего? жалею ли о чём?"<<endl;
    
     return 0;
}

#include <iostream>
#include <ctype.h>
using namespace std;
int main()
{
    char ch;
    cout<<"Введите букву(1символ)"<<endl;
    cin>>ch;
    if(islower(ch)){
        cout<<1<<" (буква строчная)"<<endl;
    } else {
        cout<<0<<" (буква заглавная)"<<endl;
    }
     
    cout<<endl;
    
    float sum; 
    cout<<"Введите сумму в долларах: "<<endl;
    cin>>sum;
    cout<<"Эта сумма в фунтах стерлингов равна "<<sum/1.487<<endl;
    cout<<"Эта сумма в франках равна "<<sum/0.172<<endl;
    cout<<"Эта сумма в немецких марках равна "<<sum/0.584<<endl;
    cout<<"Эта сумма в японских йенов равна "<<sum/0.00955<<endl;
    return 0;
}
