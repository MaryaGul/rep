#include <iostream>
#include <ctype.h>
using namespace std;
int main()
{
    char ch;
    cout<<"Введите букву(1символ)"<<endl;
    cin>>ch;
    if(islower(ch)){
        cout<<1<<" (буква строчная)"<<endl;
    } else {
        cout<<0<<" (буква заглавная)"<<endl;
    }
     
    cout<<endl;
    
    float sum; 
    cout<<"Введите сумму в долларах: "<<endl;
    cin>>sum;
    cout<<"Эта сумма в фунтах стерлингов равна "<<sum/1.487<<endl;
    cout<<"Эта сумма в франках равна "<<sum/0.172<<endl;
    cout<<"Эта сумма в немецких марках равна "<<sum/0.584<<endl;
    cout<<"Эта сумма в японских йенов равна "<<sum/0.00955<<endl;
    return 0;
}


#include <iostream>
using namespace std;
int main()
{
    float temp;
    cout<<"Введите температуру в градусах Цельсия"<<endl;
    cin>>temp;
    cout<<"Эта темперпатура в градусах по Фаренгейту равна "<<temp*9/5+32<<endl;
  
    return 0;
}
 

#include <iostream>
#include <iomanip> //подключаем библиотеку для особого вывода на экран
using namespace std;
int main()
{
     cout<<setfill('.');
     cout<<1990<<setw(10)<<135<<endl<<1991<<setw(10)<<7290<<endl<<1992<<setw(10)<<11300<<endl<<1993<<setw(10)<<16200<<endl;
     return 0;
}

#include <iostream>
using namespace std;
int main()
{   
    char s;
    float a, b, c, d;
    cout<<"Введите первую дробь: "<<endl;
    cin >> a >> s>> b;
    cout<<"Введите вторую дробь: "<<endl;
    cin >> c >>s>> d;
    cout<<"Сумма этих дробей равна "<<(a*d +b*c)<<"/"<<(b*d)<<endl;

    
     return 0;
}

#include <iostream>
using namespace std;
int main()
{   
    
    float funt, shil, pen;
    cout<<"Введите количество фунтов: "<<endl;
    cin >>funt;
    cout<<"Введите количество шиллингов: "<<endl;
    cin >>shil;
    cout<<"Введите количество пенсов: "<<endl;
    cin>>pen;
    cout<<"Десятичных фунтов "<<"£"<<(pen+=shil*12)/240+funt<<endl;

    
     return 0;
}

#include <iostream>
#include <iomanip> //подключаем библиотеку для особого вывода на экран
using namespace std;
int main()
{
    
    cout<<setiosflags(ios::left)<<setw(17)<<"Фамилия"<<setw(9)<<"Имя"<<setw(13)<<"Адрес"<<setw(10)<<"Город"<<"\n\n"<<setw(15)<<"Петров"<<setw(17)<<"Василий"<<setw(22)<<"Кленовая 16"<<setw(2)
    <<"Санкт-Петербург"<<endl<<setw(15)<<"Иванов"<<setw(14)<<"Сергей"<<setw(20)<<"Осиновая 3"<<setw(20)<<"Находка"<<endl<<setw(18)
    <<"Сидоров"<<setw(11)<<"Иван"<<setw(25)<<"Березовая 21"<<setw(4)<<"Калининград"<<endl;

     return 0;
}

 #include <iostream>
using namespace std;
int main()
{   
    float dfunt, dfrac; 
    int funt, shil, pen; 
    cout<<"Введите в десятичных фунтах сумму: "<<endl;
    cin>>dfunt;
    funt = static_cast<int>(dfunt); 
    dfrac = 240*(dfunt - funt); 
    pen = (static_cast<int>(dfrac))%12; 
    shil = static_cast<int>((dfrac-pen)/12); 
    cout<<"Эквивалентная сумма в старой форме записи "<<"£"<<funt<<"."<<shil<<"."<<pen<<endl;
}
