#include <iostream>//4
using namespace std;

int maxint(int arr[], int n)
{
	int max = 0;
	for (int i = 1; i < n; i++)
		if (arr[i] > arr[max]) 
		    max = i;
	return max;
}

int main()
{
	cout<<"Task 4"<<endl;
	int N, arr[N];
	cout<<"Введите размер массива:";
	cin>>N;
	cout<<"Введите элменты массива: ";
	for(int j =0; j < N; j++){;
	    cin>>arr[j];
	}
	int max = maxint(arr, N);
	cout<<"Максимальное значение: "<< arr[max];
	return 0;
}
